{
    "name": "rss",
    "version": "1.0.0",
    "license": "MIT",
    "main": "dist/index.js",
    "scripts": {
        "prebuild": "npm run lint && npm run typecheck",
        "build": "esbuild src/index.ts --platform=node --bundle --outfile=dist/app.js",
        "lint": "eslint src",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "cheerio": "^1.0.0-rc.10",
        "luxon": "^2.0.1"
    },
    "devDependencies": {
        "@jwilsson/eslint-config-prettier": "^7.6.0",
        "@jwilsson/eslint-config-typescript": "^7.6.0",
        "@jwilsson/prettier-config": "^7.2.0",
        "@jwilsson/tsconfig": "^1.1.0",
        "@types/aws-lambda": "^8.10.75",
        "@types/luxon": "^2.0.1",
        "@types/node": "^17.0.31",
        "esbuild": "^0.14.38",
        "eslint": "^8.1.0",
        "prettier": "^2.3.2",
        "simple-git-hooks": "^2.2.0",
        "typescript": "^4.4.2"
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged"
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "eslintConfig": {
        "extends": [
            "@jwilsson/eslint-config-typescript",
            "@jwilsson/eslint-config-prettier"
        ],
        "overrides": [
            {
                "files": [
                    "*.ts"
                ],
                "parserOptions": {
                    "project": [
                        "./tsconfig.json"
                    ]
                }
            }
        ]
    },
    "prettier": "@jwilsson/prettier-config"
}
